{% extends 'base.html.twig' %}

{% block title %}Liste des compétences{% endblock %}

{% block body %}
    <h1>Compétences</h1>

    <table class="table">
        <thead>
        </thead>
        <tbody>
        {% for skill in skills %}
            <tr>
                <td>{{ skill.skill }}</td>
                <td>
                    <a href="{{ path('skills_edit', {'id': skill.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune donneé enregistrée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('skills_new') }}">Nouveau</a>
{% endblock %}