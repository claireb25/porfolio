{% extends 'base.html.twig' %}

{% block title %}Villes{% endblock %}

{% block body %}
    <h1>Toutes les villes</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Villes</th>
            </tr>
        </thead>
        <tbody>
        {% for city in cities %}
            <tr>
               
                <td>{{ city.city }}</td>
                <td>
                   
                    <a href="{{ path('cities_edit', {'id': city.id}) }}">Modifier</a>
                    <form method="post" action="{{ path('cities_delete', {'id': city.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                        <input type="hidden" name="_method" value="DELETE">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ city.id) }}">
                        <button class="btn">Supprimer</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune donnée enregistrée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('cities_new') }}">Nouveau</a>
{% endblock %}