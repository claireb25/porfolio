{% extends 'base.html.twig' %}

{% block title %}BlogArticles index{% endblock %}

{% block body %}
    <h1>BlogArticles index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Article_title</th>
                <th>Article</th>
                <th>Publication_date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for blog_article in blog_articles %}
            <tr>
                <td>{{ blog_article.id }}</td>
                <td>{{ blog_article.articleTitle }}</td>
                <td>{{ blog_article.article }}</td>
                <td>{{ blog_article.publicationDate }}</td>
                <td>
                    <a href="{{ path('blog_articles_show', {'id': blog_article.id}) }}">show</a>
                    <a href="{{ path('blog_articles_edit', {'id': blog_article.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('blog_articles_new') }}">Create new</a>
{% endblock %}