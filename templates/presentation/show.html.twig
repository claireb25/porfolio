{% block body %}
    <h1>Presentation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ presentation.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ presentation.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ presentation.description }}</td>
            </tr>
            <tr>
                <th>Email_address</th>
