{% extends 'base.html.twig' %}

{% block title %}Formation - accueil{% endblock %}

{% block body %}
    <h1>Formation</h1>

    <table class="table">
        <thead>
            <tr>
            
                <th>Diplome</th>
            
            </tr>
        </thead>
        <tbody>
        {% for school in schools %}
            <tr>
           
                <td>{{ school.diplomaName }}</td>
                <td>
                   
                    <a href="{{ path('school_edit', {'id': school.id}) }}">Modifier</a>
                    {{ include('school/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune donnée enregistrée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('school_new') }}">Nouveau</a>
{% endblock %}