{% extends 'base.html.twig' %}

{% block title %}Toutes les années{% endblock %}

{% block body %}
    <h1>Années</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Années</th>
   
            </tr>
        </thead>
        <tbody>
        {% for date in dates %}
            <tr>
     
                <td>{{ date.year }}</td>
                <td>
                <a href="{{ path('dates_edit', {'id': date.id}) }}">modifier</a>
                {{ include('dates/_delete_form.html.twig') }}
                    
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune donnée enregistrée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('dates_new') }}">Nouveau</a>
{% endblock %}